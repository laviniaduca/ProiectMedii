<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProiectMedii.Reviews"
             Title="Reviews">

    <CollectionView x:Name="collectionView"
            Margin="20"
            SelectionMode="Single"
            ItemSizingStrategy="MeasureAllItems"
            ItemsSource="{Binding Reviews}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Padding="5" BackgroundColor="#D3D3D3">
                    <StackLayout Orientation="Horizontal">
                        <Label Text="{Binding Rating, StringFormat='Rating: {0:F1}'}" FontSize="16" FontAttributes="Bold" />
                    </StackLayout>
                    <Label Text="{Binding Name}" FontSize="14" />
                    <Label Text="{Binding Comment}" FontSize="14" />
                    <Label Text="{Binding DateCreated, StringFormat='Date: {0:d}'}" FontSize="12" TextColor="Gray" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
    
</ContentPage>