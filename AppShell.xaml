<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProiectMedii.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProiectMedii"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            />

        <ShellContent
            Title="Makeup Artists"
            ContentTemplate="{DataTemplate local:MakeupArtists}"
            />

        <ShellContent
            Title="Services"
            ContentTemplate="{DataTemplate local:Services}"
            />
        
        <ShellContent
            Title="Appointments"
            ContentTemplate="{DataTemplate local:Appointments}"
            />

        <ShellContent
            Title="Reviews"
            ContentTemplate="{DataTemplate local:Reviews}"
            />

        <ShellContent
            Title="Tutorials"
            ContentTemplate="{DataTemplate local:Tutorials}"
            />

    </TabBar>
</Shell>
